<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">
<mapper namespace="com.sds.foodfit.model.member.MemberDAO">

	<insert id="insert" parameterType="Member">
		insert into member(name, id, pwd, email, role_idx, sns_idx)
		values(#{name}, #{id}, #{pwd}, #{email}, #{role.role_idx} ,#{sns.sns_idx})
		
		<!-- member_detail에 추가적인 insert 를 위해 부모 테이블인 member의 idx값을 곧바로 추출 -->
		<selectKey keyColumn="member_idx" keyProperty="member_idx" resultType="int" order="AFTER">
			select last_insert_id() as member_idx
		</selectKey> 
	</insert>
	
	<!--홈페이지 회원 경우 비밀번호가 존재하고, 비밀번호는 member 테이블에 존재하므로, join 을 해야한다 
	하지만 mybatis 객체 간 관계를 이용하면 association -->
	<resultMap type="Member" id="MemberMap">
		<id 		column="member_idx" 		property="member_idx"/>
		<result 	column="name" 					property="name"/>
		<result 	column="id" 						property="id"/>
		<result 	column="pwd" 					property="pwd"/>
		<result 	column="email" 					property="email"/>
		
		<association column="sns_idx" property="sns" javaType="Sns" select="com.sds.foodfit.model.member.SnsDAO.select"/>
		<association column="role_idx" property="role" javaType="Role" select="com.sds.foodfit.model.member.RoleDAO.select"/>
		<association column="member_idx" property="memberDetail" javaType="MemberDetail" select="com.sds.foodfit.model.member.MemberDetailDAO.selectByMemberIdx"/>
		
	</resultMap>
	<!-- id를 이용한 회원조회 -->
	<select id="selectById" parameterType="String" resultMap="MemberMap">
		select member_idx , id, pwd, name, email, sns_idx, role_idx
		from member where id=#{id}
	</select>
	
	<!-- 아래의 맵은 자식(memberdetail)을 위한 맵이다. 서로 참조관계에 있기 때문에, 순환관계에 빠지지 않도록
	맵을 하나 더 두고, 이맵에서는 자식을 호출하지 않는다. -->
	<resultMap type="Member" id="MemberMap2">
		<id 		column="member_idx" 		property="member_idx"/>
		<result 	column="name" 					property="name"/>
		<result 	column="id" 						property="id"/>
		<result 	column="pwd" 					property="pwd"/>
		<result 	column="email" 					property="email"/>
		
		<association column="sns_idx" property="sns" javaType="Sns" select="com.sds.foodfit.model.member.SnsDAO.select"/>
		<association column="role_idx" property="role" javaType="Role" select="com.sds.foodfit.model.member.RoleDAO.select"/>
	</resultMap>
	
	<select id="selectByMemberIdx" parameterType="int" resultMap="MemberMap2">
		select * from member where member_idx=#{member_idx}
	</select>
	
</mapper>
